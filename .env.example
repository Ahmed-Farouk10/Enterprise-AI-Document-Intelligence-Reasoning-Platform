# Database Configuration
POSTGRES_USER=docucentric
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=docucentric
DATABASE_URL=postgresql://docucentric:your_secure_password_here@localhost:5432/docucentric

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@localhost:6379/0

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=documents
QDRANT_URL=http://localhost:6333

# Neo4j Configuration (for Cognee)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# Hugging Face & LLM Configuration
HF_HOME=/app/.cache
HF_TOKEN=your_huggingface_token_here  # Optional: for gated models

# LLM Provider and Model
LLM_PROVIDER=huggingface
LLM_MODEL=Qwen/Qwen2.5-32B-Instruct  # Production: Best accuracy
# LLM_MODEL=Qwen/Qwen2.5-14B-Instruct  # Alternative: A10G GPU
# LLM_MODEL=Qwen/Qwen2.5-7B-Instruct   # Development: Free tier

# Cognee Configuration
COGNEE_LLM_PROVIDER=huggingface
COGNEE_LLM_MODEL=Qwen/Qwen2.5-32B-Instruct  # Production: Best graph quality
COGNEE_ROOT_DIR=/app/cognee_data
LLM_API_KEY=local  # Required by Cognee even for local models (use 'local' or HF_TOKEN)

# Application Configuration
LOG_LEVEL=INFO
JSON_LOGS=true

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
